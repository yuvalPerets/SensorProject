<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditButtonsActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="218dp"
        android:layout_height="338dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Text fields for editing the buttons -->
        <EditText
            android:id="@+id/editTextButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Button 1" />

        <EditText
            android:id="@+id/editTextButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Button 2" />

        <EditText
            android:id="@+id/editTextButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Button 3" />

        <EditText
            android:id="@+id/editTextButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Button 4" />

        <!-- Cancel and Save buttons -->
        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>